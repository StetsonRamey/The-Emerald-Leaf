---
import { Image } from "astro:assets";
import background from "../assets/emerald-leaf-lower.webp";
---

<section id="contact"
  class="bg-secondary flex scroll-mt-24 flex-col items-center gap-4 space-y-11"
>
  <div class="grid grid-cols-2 place-content-center [ form ]">
    <div class="stack">
      <Image
        class="w-full [ image ]"
        src={background}
        alt="A room full of plants and sunlight"
        widths={[240, 540, 720, 1200, background.width]}
      />
      <h2 class="text-5xl text-tertiary bg-secondary p-10 rounded-full">
        Let's Chat
      </h2>
    </div>
    <div
      class="mt-16"
      style="width:100%;height:800px;"
      data-fillout-id="94c2zz1Zqzus"
      data-fillout-embed-type="standard"
      data-fillout-inherit-parameters
      data-fillout-dynamic-resize
    >
    </div><script src="https://server.fillout.com/embed/v1/"></script>
  </div>
</section>

<style>
  .stack {
    display: grid;
  }
  h2 {
    place-self: center;
  }

  .stack > * {
    grid-area: 1 / 1;
  }

  @media (width <= 1150px) {
    .form {
      grid-template-columns: 100vw;
      grid-template-rows: repeat(2, minmax(0, 1fr));
    }

    .image {
      height: 100%;
      object-fit: cover;
    }

  }
</style>
